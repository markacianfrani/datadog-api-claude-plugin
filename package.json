{
  "name": "datadog-api-claude-plugin",
  "version": "1.15.0",
  "description": "A Claude plugin to use Datadog directly through its APIs with code generation support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dd-plugin": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "datadog",
    "claude",
    "plugin",
    "monitoring",
    "observability",
    "api"
  ],
  "author": {
    "name": "DatadogHQ"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DataDog/datadog-api-claude-plugin"
  },
  "homepage": "http://www.datadoghq.com",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@datadog/datadog-api-client": "^1.29.0",
    "inquirer": "^13.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.57.1",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.51.0"
  }
}
